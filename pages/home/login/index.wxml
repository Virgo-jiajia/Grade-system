<view>
    <view hover-class="none" class="login" hover-class="none" hover-stop-propagation="false">
        <image class="image-logo" src="/images/icon/login/logo.png" mode="aspectFill" lazy-load="false" />
        <form bindsubmit="submitForm">
            <view hover-class="none" class="box">
                <view hover-class="none" class="input-box" hover-stop-propagation="false">
                    <image src="/images/icon/login/person.png" mode="aspectFill" lazy-load="false" />
                    <input type="text" value="{{username}}" bindblur="userBlur" placeholder="请输入姓名" placeholder-class="placeStyle" required/>
                </view>
                <view hover-class="none" class="input-box" hover-stop-propagation="false">
                    <image src="/images/icon/login/phone.png" mode="aspectFill" lazy-load="false" />
                    <input type="number" value="{{phone}}" bindinput="phoneInput" bindblur="phoneBlur" placeholder="请输入手机号" placeholder-class="placeStyle" type="number" maxlength="11"/>
                </view>
                <view hover-class="none" class="input-box" hover-stop-propagation="false">
                    <image src="/images/icon/login/password.png" mode="aspectFill" lazy-load="false" />
                    <input type="text" password="{{showPassword}}" value="{{password}}" placeholder="请输入密码" placeholder-class="placeStyle"
                    bindblur="passBlur"/>
                </view>
            </view>
            <button form-type="submit" class="btn">登录</button>
        </form>
    </view>
</view>